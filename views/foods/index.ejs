<% layout('layouts/boilerplate')%>
<!-- <h1 class="mb-3">Iconic Food List</h1> -->
<div id="cluster-map"></div>
<div class="container mb-5 border">
  <div class="text-white showTitle text-center bg-dark rounded-0 border-0">
    <h5 class="card-title">Global Iconic FoodMap</h5>
  </div>
  <% for (let food of foods.reverse()){%>
  <div class="card rounded-0 border-bottom">
    <div class="row">
      <div class="col-md-4">
        <%if(food.images.length) {%>
        <img class="img-fluid" alt="" src="<%=food.images[0].url%>" />
        <% }else {%>
        <img
          class="img-fluid"
          alt=""
          src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/FoodMap/1.png"
        />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= food.title %></h5>

          <p class="card-text">
            <%if(food.description.length >300) {%> <%=
            food.description.substring(0, 300) + " ..." %><a
              href="/foods/<%=food._id%>"
              >Read More</a
            >
            <% }else{ %> <%= food.description%> <% } %>
          </p>
          <p class="card-text">
            <small class="text-muted">üìç <%= food.location%></small>
          </p>
          <a class="btn btn-outline-dark" href="/foods/<%=food._id%>"
            >View More</a
          >
        </div>
      </div>
    </div>
  </div>
  <% }%>
</div>
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const foods = { features: <%- JSON.stringify(foods) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
